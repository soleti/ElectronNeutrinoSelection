  weight_functions_beam: [
    bnbcorrection, horncurrent, expskin,
    piplus, piminus, kplus, kzero, kminus,
    pioninexsec, pionqexsec, piontotxsec,
    nucleontotxsec, nucleonqexsec, nucleoninexsec
